@inject IJSRuntime JS
@using CenterOfExcellence.Constants

<footer class="bg-gray-900 text-white py-12">
    <div class="max-w-7xl mx-auto px-6">
        
        <div class="flex flex-col lg:flex-row gap-8 mb-8">
            
            <div class="flex-1 space-y-4">
                <h3 class="font-heading text-[24px] leading-heading text-white mb-4">Dr Lal PathLabs</h3>
                <p class="font-paragraph text-[16px] leading-paragraph text-gray-300">
                    @AppConstants.Footer.CompanyDescription
                </p>
                <div class="flex space-x-4">
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        <i class="fa-brands fa-facebook text-xl"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        <i class="fa-brands fa-twitter text-xl"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        <i class="fa-brands fa-linkedin text-xl"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">
                        <i class="fa-brands fa-instagram text-xl"></i>
                    </a>
                </div>
            </div>

            <!-- Quick Links Section -->
            <div class="flex-1 space-y-4">
                <h4 class="font-subHeading text-[20px] leading-subHeading text-white mb-4">Quick Links</h4>
                <ul class="space-y-2">
                    @foreach (var link in AppConstants.Footer.QuickLinks)
                    {
                        <li><a href="@link.Url" class="font-paragraph text-[16px] leading-paragraph text-gray-300 hover:text-white transition-colors">@link.Text</a></li>
                    }
                </ul>
            </div>

            <!-- Services Section -->
            <div class="flex-1 space-y-4">
                <h4 class="font-subHeading text-[20px] leading-subHeading text-white mb-4">Our Services</h4>
                <ul class="space-y-2">
                    @foreach (var service in AppConstants.Footer.Services)
                    {
                        <li><a href="@service.Url" class="font-paragraph text-[16px] leading-paragraph text-gray-300 hover:text-white transition-colors">@service.Text</a></li>
                    }
                </ul>
            </div>

           
            <div class="flex-1 space-y-4">
                <h4 class="font-subHeading text-[20px] leading-subHeading text-white mb-4">Contact Info</h4>
                <div class="space-y-3">
                    <div class="flex items-start space-x-3">
                        <i class="fa-solid fa-map-marker-alt text-blue-400 mt-1"></i>
                        <p class="font-paragraph text-[16px] leading-paragraph text-gray-300">
                            @AppConstants.Footer.ContactInfo.Address
                        </p>
                    </div>
                    <div class="flex items-center space-x-3">
                        <i class="fa-solid fa-phone text-blue-400"></i>
                        <p class="font-paragraph text-[16px] leading-paragraph text-gray-300">
                            @AppConstants.Footer.ContactInfo.Phone
                        </p>
                    </div>
                    <div class="flex items-center space-x-3">
                        <i class="fa-solid fa-envelope text-blue-400"></i>
                        <p class="font-paragraph text-[16px] leading-paragraph text-gray-300">
                            @AppConstants.Footer.ContactInfo.Email
                        </p>
                    </div>
                    <div class="flex items-center space-x-3">
                        <i class="fa-solid fa-clock text-blue-400"></i>
                        <p class="font-paragraph text-[16px] leading-paragraph text-gray-300">
                            Mon-Sat: 7AM-8PM
                        </p>
                    </div>
                </div>
            </div>
        </div>

       
        <div class="border-t border-gray-700 pt-8">
            <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
                <p class="font-paragraph text-[16px] leading-paragraph text-gray-300">
                    &copy; <span id="currentYear">@currentYear</span> Dr Xyz Name. All rights reserved.
                </p>
                <div class="flex space-x-6">
                    <a href="/privacy-policy" class="font-paragraph text-[14px] leading-paragraph text-gray-300 hover:text-white transition-colors">Privacy Policy</a>
                    <a href="/terms-and-conditions" class="font-paragraph text-[14px] leading-paragraph text-gray-300 hover:text-white transition-colors">Terms of Service</a>
                </div>
            </div>
        </div>
    </div>
</footer>

@code {
    private int currentYear = DateTime.Now.Year;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Update year using JavaScript for better accuracy
            await JS.InvokeVoidAsync("updateCurrentYear");
        }
    }
}
