                        <i class="fa-solid fa-phone text-blue-400"></i>
                        <p class="font-paragraph text-[16px] leading-paragraph text-gray-300">
                            +91 6005493028
                        </p>
                    </div>
                    <div class="flex items-center space-x-3">
                        <i class="fa-solid fa-envelope text-blue-400"></i>
                        <p class="font-paragraph text-[16px] leading-paragraph text-gray-300">
                            info@drlalpathlabs.com
                        </p>
                    </div>
                    <div class="flex items-center space-x-3">
                        <i class="fa-solid fa-clock text-blue-400"></i>
                        <p class="font-paragraph text-[16px] leading-paragraph text-gray-300">
                            Mon-Sat: 7AM-8PM
                        </p>
                    </div>
                </div>
            </div>
        </div>

       
        <div class="border-t border-gray-700 pt-8">
            <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
                <p class="font-paragraph text-[16px] leading-paragraph text-gray-300">
                    &copy; <span id="currentYear">@currentYear</span> Dr Xyz Name. All rights reserved.
                </p>
                <div class="flex space-x-6">
                    <a href="#" class="font-paragraph text-[14px] leading-paragraph text-gray-300 hover:text-white transition-colors">Privacy Policy</a>
                    <a href="#" class="font-paragraph text-[14px] leading-paragraph text-gray-300 hover:text-white transition-colors">Terms of Service</a>
                </div>
            </div>
        </div>
    </div>
</footer>

@code {
    private int currentYear = DateTime.Now.Year;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Update year using JavaScript for better accuracy
            await JS.InvokeVoidAsync("updateCurrentYear");
        }
    }
}
