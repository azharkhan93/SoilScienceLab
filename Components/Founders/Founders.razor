@using CenterOfExcellence.Components.Common.Buttons
@using CenterOfExcellence.Constants

<section class="py-20 px-4 bg-white text-gray-800">
    <div class="max-w-7xl mx-auto">
        <!-- Header Section -->
        <div class="text-center mb-20">
            <h2 class="font-heading text-[40px] leading-heading text-gray-800 mb-6">Meet Our Visionary Founders</h2>
            <p class="font-paragraph text-[20px] leading-paragraph text-gray-600 max-w-4xl mx-auto">
                The brilliant minds who transformed healthcare diagnostics and built Dr Lal PathLabs into India's most trusted diagnostic laboratory.
            </p>
        </div>

        <!-- Founders Grid -->
        <div class="flex flex-col lg:flex-row gap-16 mb-20">
            @foreach (var founder in AppConstants.Founders.FoundersList)
            {
                <div class="flex-1">
                    <!-- Founder Card -->
                    <div class="bg-white/10 backdrop-blur-sm rounded-3xl p-8 border border-gray-200 shadow-xl transform hover:scale-105 transition-all duration-500">
                        
                        <!-- Founder Image & Info Row -->
                        <div class="flex flex-col lg:flex-row items-center lg:items-start gap-8 mb-8">
                            
                            <!-- Image Section -->
                            <div class="relative flex-shrink-0">
                                <div class="w-48 h-48 rounded-2xl overflow-hidden shadow-2xl border-4 border-gray-200">
                                    <img src="@founder.ImageUrl" 
                                         alt="@founder.Name"
                                         class="w-full h-full object-cover" />
                                </div>
                                
                                <!-- Decorative Elements -->
                                <div class="absolute -top-4 -right-4 w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
                                    <i class="@founder.Icon text-2xl text-white"></i>
                                </div>
                                
                                <!-- Experience Badge -->
                                <div class="absolute -bottom-4 -left-4 bg-white/95 backdrop-blur-sm rounded-xl px-4 py-2 shadow-lg border border-gray-200">
                                    <span class="font-subHeading text-[14px] text-gray-800">@founder.Experience</span>
                                </div>
                            </div>

                            <!-- Info Section -->
                            <div class="flex-1 text-center lg:text-left">
                                <h3 class="font-heading text-[32px] leading-heading text-gray-800 mb-3">@founder.Name</h3>
                                <p class="font-subHeading text-[20px] leading-subHeading text-gray-600 mb-4">@founder.Position</p>
                                <p class="font-paragraph text-[16px] leading-paragraph text-gray-700 mb-6">@founder.Description</p>
                                
                                @* <div class="space-y-3 mb-6">
                                    @foreach (var achievement in founder.Achievements)
                                    {
                                        <div class="flex items-start @(founder.IsLeft ? "lg:justify-end" : "")">
                                            <i class="fa-solid fa-star text-yellow-400 mr-3 mt-1 flex-shrink-0"></i>
                                            <span class="font-paragraph text-[15px] leading-paragraph text-blue-100">@achievement</span>
                                        </div>
                                    }
                                </div> *@
                            </div>
                        </div>

                        <!-- Credentials & Stats Row -->
                        <div class="flex flex-col md:flex-row gap-6">
                            
                            <div class="flex-1 bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-gray-200 shadow-lg">
                                <h4 class="font-subHeading text-[18px] leading-subHeading text-gray-800 mb-4 text-center">Credentials</h4>
                                <div class="space-y-3">
                                    @foreach (var credential in founder.Credentials)
                                    {
                                        <div class="flex items-center justify-center">
                                            <i class="fa-solid fa-award text-blue-500 mr-3"></i>
                                            <span class="font-paragraph text-[14px] text-gray-700">@credential</span>
                                        </div>
                                    }
                                </div>
                            </div>
                            
                        </div>

                        <!-- Social Links -->
                        <div class="flex justify-center space-x-6 mt-8">
                            @if (!string.IsNullOrEmpty(founder.LinkedIn))
                            {
                                <a href="@founder.LinkedIn" class="bg-gray-100 hover:bg-gray-200 rounded-full p-3 transition-all duration-300">
                                    <i class="fa-brands fa-linkedin text-2xl text-gray-700"></i>
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(founder.Twitter))
                            {
                                <a href="@founder.Twitter" class="bg-gray-100 hover:bg-gray-200 rounded-full p-3 transition-all duration-300">
                                    <i class="fa-brands fa-twitter text-2xl text-gray-700"></i>
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(founder.Email))
                            {
                                <a href="mailto:@founder.Email" class="bg-gray-100 hover:bg-gray-200 rounded-full p-3 transition-all duration-300">
                                    <i class="fa-solid fa-envelope text-2xl text-gray-700"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Research & Innovation Section -->
        <div class="mb-20">
            <h3 class="font-heading text-[32px] leading-heading text-gray-800 mb-8 text-center">Research & Innovation</h3>
            <div class="flex flex-col md:flex-row gap-8">
                @foreach (var researcher in AppConstants.Founders.ResearchTeam)
                {
                    <div class="flex-1 bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-gray-200 shadow-lg transform hover:scale-105 transition-all duration-300">
                        <div class="flex items-start space-x-4">
                            <!-- Researcher Icon -->
                            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center flex-shrink-0">
                                <i class="@researcher.Icon text-2xl text-white"></i>
                            </div>

                            <!-- Researcher Info -->
                            <div class="flex-1">
                                <h4 class="font-heading text-[20px] leading-heading text-gray-800 mb-2">@researcher.Name</h4>
                                <p class="font-subHeading text-[16px] leading-subHeading text-gray-600 mb-3">@researcher.Role</p>
                                <p class="font-paragraph text-[14px] leading-paragraph text-gray-700 mb-3">@researcher.Description</p>
                                
                                <!-- Research Areas -->
                                <div class="flex flex-wrap gap-2">
                                    @foreach (var area in researcher.ResearchAreas)
                                    {
                                        <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-paragraph border border-blue-200">@area</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

       
    </div>
</section>

