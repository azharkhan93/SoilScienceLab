@using CenterOfExcellence.Components.HeroSection.Data
@using CenterOfExcellence.Components.Common.Buttons

@foreach (var slide in Slides)
{
    <div class="carousel-content @(slide.Id == ActiveSlideId ? "active" : "")" 
         data-content="@slide.Id" 
         style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 20; display: flex; align-items: center; justify-content: start;">
        <div class="text-white px-8 py-16 max-w-4xl">
            <h1 class="hero-title font-heading text-[35px] md:text-[50px] lg:text-[60px] leading-heading mb-6 text-white drop-shadow-lg">
                @slide.Title
            </h1>
            <p class="hero-subtitle font-subHeading text-[16px] md:text-[20px] lg:text-[22px] leading-paragraph mb-8 max-w-3xl text-white/90 drop-shadow-md">
                @slide.Subtitle
            </p>
            <div class="flex justify-start">
                <CustomButton Text="@slide.ButtonText" Variant="ButtonVariant.Primary" OnClick="@HandleClick" />
            </div>
        </div>
    </div>
}

<style>
    .carousel-content {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s ease-in-out;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 20;
        display: flex;
        align-items: start;
        justify-content: start;
    }

    .carousel-content.active {
        opacity: 1;
        transform: translateY(0);
    }

    .carousel-content h1 {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        font-weight: 700;
    }

    .carousel-content p {
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
        line-height: 1.6;
    }
</style>

@code {
    [Parameter] public List<SlideData> Slides { get; set; } = new();
    [Parameter] public int ActiveSlideId { get; set; }
    [Parameter] public EventCallback OnButtonClick { get; set; }

    private async Task HandleClick()
    {
        await OnButtonClick.InvokeAsync();
    }
} 