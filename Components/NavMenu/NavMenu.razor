@inject IJSRuntime JS

<nav class="flex justify-between items-center p-4 bg-teal-600 text-white relative">
    <div class="text-2xl font-bold">
        <h2>MyLogo</h2>
    </div>

    <div class="lg:hidden">
        <button @onclick="ToggleNav" class="focus:outline-none z-50">
            <svg class="w-12 h-12 transition-transform duration-300" fill="none" stroke="currentColor"
                viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>
    </div>

    <div class="hidden lg:flex gap-6">
        <NavLink href="/" class="text-lg hover:underline" Match="NavLinkMatch.All">Home</NavLink>
        <NavLink href="/about" class="text-lg hover:underline">About</NavLink>
        <NavLink href="/contact" class="text-lg hover:underline">Contact</NavLink>
        <NavLink href="/counter" class="text-lg hover:underline">Counter Page</NavLink>
    </div>

    <div class="hidden lg:block">
        <button class="bg-blue-950 hover:bg-red-800 text-white px-4 py-2 rounded">Sign Up</button>
    </div>
</nav>


<div class="lg:hidden fixed top-0 left-0 w-[100%] h-full bg-teal-600 z-30 shadow-lg transition-transform duration-300"
    style="@( _isNavOpen ? "transform: translateX(0);" : "transform: translateX(-100%);")">

    <div class="flex flex-col items-start justify-center h-full gap-10 px-6">

        <button @onclick="ToggleNav" class="absolute top-4 right-4 focus:outline-none">
            <svg class="w-12 h-12 text-white bg-slate-600 rounded-full" fill="none" stroke="currentColor"
                viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>

        <NavLink href="/" class="text-lg hover:underline  border-t-2 border-black w-full border-b-2 p-2 ">Home</NavLink>
        <NavLink href="/about" class="text-lg hover:underline">About</NavLink>
        <NavLink href="/contact" class="text-lg hover:underline">Contact</NavLink>
        <button class="bg-blue-950 hover:bg-red-800 text-white px-4 py-2 rounded w-full">Sign Up</button>
    </div>
</div>

@code {
    private bool _isNavOpen = false;

    private void ToggleNav()
    {
        _isNavOpen = !_isNavOpen;
        Console.WriteLine($"Menu toggled: {_isNavOpen}");
    }
}
