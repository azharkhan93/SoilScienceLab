@using CenterOfExcellence.Components.PageHeader

<section class="relative  py-12 overflow-hidden">
    <!-- Background Image -->
    @if (!string.IsNullOrEmpty(BackgroundImage))
    {
        <div class="absolute inset-0 z-0">
            <img src="@BackgroundImage" 
                 alt="Page background" 
                 class="w-full h-full object-cover opacity-20" />
        </div>
    }
    
   
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50/90 to-indigo-100/90 z-10"></div>
    

    <div class="relative z-20 max-w-7xl mx-auto px-6">
        
        
        <div class="text-start">
            <h1 class="font-heading text-[48px] leading-heading text-gray-800 mb-4">@Heading</h1>
            <p class=" text-start font-paragraph text-[20px] leading-paragraph text-gray-600 max-w-3xl ">@Intro</p>
        </div>

        <div class="flex items-center justify-between mt-11">
            <div class="flex items-center space-x-4">
                @if (!string.IsNullOrEmpty(BackLinkText))
                {
                    <a href="@BackLinkUrl" class="flex items-center space-x-2 text-blue-600 hover:text-blue-800 transition-colors">
                        <i class="fa-solid fa-arrow-left text-lg"></i>
                        <span class="font-paragraph text-[16px] leading-paragraph">@BackLinkText</span>
                    </a>
                }
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter] public string Heading { get; set; } = string.Empty;
    [Parameter] public string Intro { get; set; } = string.Empty;
    [Parameter] public string BackgroundImage { get; set; } = string.Empty;
    [Parameter] public string BackLinkText { get; set; } = string.Empty;
    [Parameter] public string BackLinkUrl { get; set; } = "/";
} 