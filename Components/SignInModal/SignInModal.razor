@using CenterOfExcellence.Components.Forms.LoginForm

@if (IsVisible)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-lg shadow-xl w-full max-w-md max-h-[90vh] overflow-y-auto">
            <!-- Close Button -->
            <div class="flex justify-end items-center p-2 border-b sticky top-0 bg-white">
                <button @onclick="CloseModal" class="text-gray-500 hover:text-gray-700 p-2">
                    <i class="fa-solid fa-xmark text-2xl"></i>
                </button>
            </div>

            <!-- Login Form -->
            <LoginForm OnSignIn="OnSignIn" OnOTPLogin="OnOTPLogin" />
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public EventCallback<(string mobile, string password)> OnSignIn { get; set; }
    [Parameter] public EventCallback<string> OnOTPLogin { get; set; }

    private async Task CloseModal()
    {
        IsVisible = false;
        await IsVisibleChanged.InvokeAsync(IsVisible);
    }
} 