@page "/counter"
<PageTitle>Counter</PageTitle>

<div class="h-[100vh] w-[100vw] flex flex-col items-center justify-center gap-6">
    <h1 class="text-3xl font-bold text-teal-600">Simple Counter</h1>

    <p class="text-2xl">Current Count: <span>@count</span></p>


    <div class="flex gap-4">
        <button @onclick="DecrementCount" class="bg-red-500 text-white px-6 py-2 rounded text-lg">
            - Decrease
        </button>

        <button @onclick="IncrementCount" class="bg-green-500 text-white px-6 py-2 rounded text-lg">
            + Increase
        </button>
    </div>
</div>

@code {
    private int count = 0;

    private void IncrementCount()
    {
        count++;
        StateHasChanged(); // Force UI update
    }

    private void DecrementCount()
    {
        count--;
        StateHasChanged(); 
    }
}
