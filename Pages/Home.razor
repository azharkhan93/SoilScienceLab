@page "/"
<PageTitle>Home</PageTitle>

<div class="h-[100vh] w-[100vw] flex items-center justify-center py-10 gap-8 flex-col">
    <div class="h-[400px] bg-neutral-500 w-[500px] flex items-center justify-center">
        <h1 class="text-4xl text-red-500 text-center">Hello world</h1>
    </div>

    <h3 class="text-2xl font-bold">Counter</h3>

    <p class="text-lg">Current count: @count</p>

    <button @onclick="IncrementCount" class="bg-blue-500 text-white rounded w-[200px] h-16 py-2 px-4 text-lg">
        Click me
    </button>
</div>

@code {
    private int count = 0;

    private void IncrementCount()
    {
        count++;
    }
}



